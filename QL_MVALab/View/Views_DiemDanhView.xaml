<UserControl x:Class="QL_MVALab.View.Views_DiemDanhView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200">

    <!-- ========== Styles đơn giản ========== -->
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Padding"
                    Value="10,5" />
            <Setter Property="MinWidth"
                    Value="80" />
            <Setter Property="Height"
                    Value="30" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Padding"
                    Value="5" />
            <Setter Property="Height"
                    Value="25" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin"
                    Value="5,5,5,0" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Search -->
            <RowDefinition Height="*" />
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ========== Header ========== -->
        <Border Grid.Row="0"
                Background="#FF5722"
                Padding="10">
            <DockPanel LastChildFill="False">
                <TextBlock Text="QUẢN LÝ ĐIỂM DANH"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center" />
                <Button Content="🔄 Refresh"
                        DockPanel.Dock="Right"
                        Command="{Binding RefreshCommand}"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="White"
                        Margin="20,0,0,0" />
            </DockPanel>
        </Border>

        <!-- ========== Search bar ========== -->
        <Border Grid.Row="1"
                Background="#f5f5f5"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="🔍 Tìm kiếm:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           FontWeight="SemiBold" />
                <TextBox Grid.Column="1"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Grid.Column="2"
                           Text="{Binding FilteredDiemDanhList.Count, StringFormat='Tìm thấy: {0} điểm danh'}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontStyle="Italic" />
            </Grid>
        </Border>

        <!-- ========== Main Content ========== -->
        <Grid Grid.Row="2"
              Margin="10"
              Background="LightCyan">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <!-- Form -->
                <ColumnDefinition Width="*" />
                <!-- Grid -->
            </Grid.ColumnDefinitions>

            <!-- ===== Form nhập ===== -->
            <GroupBox Grid.Column="0"
                      Header="Thông tin điểm danh"
                      Margin="0,0,5,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- Chỉ đọc: Id -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <Label Content="ID:" />
                            <TextBlock Text="{Binding Id}"
                                       VerticalAlignment="Center"
                                       Margin="5,5,15,0"
                                       FontWeight="Bold" />
                        </StackPanel>

                        <Label Content="Buổi học ID *" />
                        <TextBox Text="{Binding BuoiHocId, UpdateSourceTrigger=PropertyChanged}" />

                        <!-- Hiển thị thông tin buổi học (chỉ đọc) -->
                        <Label Content="Tên lớp học:" />
                        <Border Background="#f0f0f0"
                                Margin="5"
                                Padding="5"
                                MinHeight="25"
                                CornerRadius="3">
                            <TextBlock VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text"
                                                Value="{Binding TenLop}" />
                                        <Setter Property="Foreground"
                                                Value="Green" />
                                        <Setter Property="FontWeight"
                                                Value="SemiBold" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TenLop}"
                                                         Value="">
                                                <Setter Property="Foreground"
                                                        Value="Gray" />
                                                <Setter Property="Text"
                                                        Value="💡 Nhập Buổi học ID để hiển thị thông tin" />
                                                <Setter Property="FontWeight"
                                                        Value="Normal" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>

                        <!-- Thông tin bổ sung từ buổi học -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,5">
                            <Label Content="Ngày học:"
                                   Width="80" />
                            <TextBlock Text="{Binding ThoiGianBatDau, StringFormat={}{0:dd/MM/yyyy }}"
                                       VerticalAlignment="Center"
                                       Margin="5,5,15,0"
                                       FontStyle="Italic"
                                       Foreground="Blue" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <Label Content="Buổi thứ:"
                                   Width="80" />
                            <TextBlock Text="{Binding BuoiThu}"
                                       VerticalAlignment="Center"
                                       Margin="5,5,15,0"
                                       FontStyle="Italic"
                                       Foreground="Blue" />
                        </StackPanel>

                        <Label Content="Học viên ID *" />
                        <TextBox Text="{Binding HocVienId, UpdateSourceTrigger=PropertyChanged}" />

                        <!-- Hiển thị tên học viên (chỉ đọc) -->
                        <Label Content="Tên học viên:" />
                        <Border Background="#f0f0f0"
                                Margin="5"
                                Padding="5"
                                MinHeight="25"
                                CornerRadius="3">
                            <TextBlock VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text"
                                                Value="{Binding HoTen}" />
                                        <Setter Property="Foreground"
                                                Value="Green" />
                                        <Setter Property="FontWeight"
                                                Value="SemiBold" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HoTen}"
                                                         Value="">
                                                <Setter Property="Foreground"
                                                        Value="Gray" />
                                                <Setter Property="Text"
                                                        Value="💡 Nhập Học viên ID để hiển thị thông tin" />
                                                <Setter Property="FontWeight"
                                                        Value="Normal" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>

                        <Label Content="Trạng thái điểm danh *" />
                        <StackPanel Orientation="Horizontal"
                                    Margin="5">
                            <CheckBox Content="Có mặt"
                                      IsChecked="{Binding CoMat, Mode=TwoWay}"
                                      FontWeight="SemiBold"
                                      Foreground="Green" />
                        </StackPanel>

                        <!-- Nút thao tác -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0">
                            <Button Content="➕ Thêm"
                                    Command="{Binding AddCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderBrush="#4CAF50" />
                            <Button Content="✏️ Sửa"
                                    Command="{Binding UpdateCommand}"
                                    Background="#FF9800"
                                    Foreground="White"
                                    BorderBrush="#FF9800" />
                            <Button Content="🗑️ Xóa"
                                    Command="{Binding DeleteCommand}"
                                    Background="#F44336"
                                    Foreground="White"
                                    BorderBrush="#F44336" />
                            <Button Content="🆕 Clear"
                                    Command="{Binding ClearCommand}"
                                    Background="#607D8B"
                                    Foreground="White"
                                    BorderBrush="#607D8B" />
                        </StackPanel>

                        <TextBlock Text="* Trường bắt buộc"
                                   FontStyle="Italic"
                                   Foreground="Red"
                                   Margin="5,10,5,0"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <!-- ===== DataGrid ===== -->
            <DataGrid Grid.Column="1"
                      ItemsSource="{Binding FilteredDiemDanhList}"
                      SelectedItem="{Binding SelectedDiemDanh, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeaderWidth="0"
                      HeadersVisibility="Column"
                      ColumnWidth="Auto"
                      CanUserResizeColumns="True"
                      BorderBrush="#90CAF9"
                      BorderThickness="1"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#E0E0E0"
                      VerticalGridLinesBrush="#E0E0E0"
                      AlternationCount="2"
                      RowBackground="White"
                      AlternatingRowBackground="#FAFAFA"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      VirtualizingPanel.ScrollUnit="Pixel"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True">

                <!-- Header cột: căn giữa + màu nền -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Center" />
                        <Setter Property="Background"
                                Value="#FFECB3" />
                        <Setter Property="Foreground"
                                Value="#E65100" />
                        <Setter Property="FontWeight"
                                Value="SemiBold" />
                        <Setter Property="BorderBrush"
                                Value="#FFA726" />
                        <Setter Property="BorderThickness"
                                Value="0,0,1,1" />
                        <Setter Property="Padding"
                                Value="6,4" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Cell & Row style -->
                <DataGrid.Resources>
                    <!-- cell text mặc định -->
                    <Style x:Key="CellText"
                           TargetType="TextBlock">
                        <Setter Property="Padding"
                                Value="6,0" />
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                        <Setter Property="TextTrimming"
                                Value="CharacterEllipsis" />
                    </Style>
                    <!-- cell căn giữa -->
                    <Style x:Key="CenterCell"
                           TargetType="TextBlock"
                           BasedOn="{StaticResource CellText}">
                        <Setter Property="TextAlignment"
                                Value="Center" />
                    </Style>
                    <!-- cell trạng thái có màu -->
                    <Style x:Key="StatusCell"
                           TargetType="TextBlock"
                           BasedOn="{StaticResource CenterCell}">
                        <Setter Property="FontWeight"
                                Value="SemiBold" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CoMat}"
                                         Value="True">
                                <Setter Property="Foreground"
                                        Value="Green" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CoMat}"
                                         Value="False">
                                <Setter Property="Foreground"
                                        Value="Red" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    <!-- gạch chân mỗi row -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderBrush"
                                Value="#E0E0E0" />
                        <Setter Property="BorderThickness"
                                Value="0,0,0,1" />
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding Id}"
                                        MinWidth="40">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource CenterCell}" />
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Buổi học ID"
                                        Binding="{Binding BuoiHocId}"
                                        MinWidth="80"
                                        ElementStyle="{StaticResource CenterCell}" />

                    <DataGridTextColumn Header="Học viên ID"
                                        Binding="{Binding HocVienId}"
                                        MinWidth="80"
                                        ElementStyle="{StaticResource CenterCell}" />

                    <DataGridTextColumn Header="Tên học viên"
                                        Binding="{Binding HoTen}"
                                        MinWidth="150"
                                        ElementStyle="{StaticResource CellText}" />

                    <DataGridTextColumn Header="Tên lớp học"
                                        Binding="{Binding TenLop}"
                                        MinWidth="120"
                                        ElementStyle="{StaticResource CellText}" />

                    <DataGridTextColumn Header="Ngày học"
                                        Binding="{Binding NgayHoc, StringFormat={}{0:dd/MM/yyyy}}"
                                        MinWidth="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource CenterCell}" />
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Buổi thứ"
                                        Binding="{Binding BuoiThu}"
                                        MinWidth="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource CenterCell}" />
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Trạng thái"
                                        Binding="{Binding TrangThaiText}"
                                        MinWidth="100"
                                        Width="*"
                                        ElementStyle="{StaticResource StatusCell}" />

                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Grid>
</UserControl>