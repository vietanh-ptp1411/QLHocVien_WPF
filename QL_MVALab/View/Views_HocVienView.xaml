<UserControl x:Class="QL_MVALab.View.Views_HocVienView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200">

    <!-- ========== Styles đơn giản ========== -->
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Padding"
                    Value="10,5" />
            <Setter Property="MinWidth"
                    Value="80" />
            <Setter Property="Height"
                    Value="30" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Padding"
                    Value="5" />
            <Setter Property="Height"
                    Value="25" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin"
                    Value="5,5,5,0" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Search -->
            <RowDefinition Height="*" />
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ========== Header ========== -->
        <Border Grid.Row="0"
                Background="#2196F3"
                Padding="10">
            <DockPanel LastChildFill="False">
                <TextBlock Text="QUẢN LÝ HỌC VIÊN"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center" />
                <Button Content="🔄 Refresh"
                        DockPanel.Dock="Right"
                        Command="{Binding RefreshCommand}"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="White"
                        Margin="20,0,0,0" />
            </DockPanel>
        </Border>

        <!-- ========== Search bar ========== -->
        <Border Grid.Row="1"
                Background="#f5f5f5"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="🔍 Tìm kiếm:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           FontWeight="SemiBold" />
                <TextBox Grid.Column="1"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Grid.Column="2"
                           Text="{Binding FilteredHocVienList.Count, StringFormat='Tìm thấy: {0} học viên'}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontStyle="Italic" />
            </Grid>
        </Border>

        <!-- ========== Main Content ========== -->
        <Grid Grid.Row="2"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <!-- Form -->
                <ColumnDefinition Width="*" />
                <!-- Grid -->
            </Grid.ColumnDefinitions>

            <!-- ===== Form nhập ===== -->
            <GroupBox Grid.Column="0"
                      Header="Thông tin học viên"
                      Margin="0,0,5,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- Chỉ đọc: Id & Ngày tạo -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,8">
                            <Label Content="ID" />
                            <TextBlock Text="{Binding Id}"
                                       VerticalAlignment="Center"
                                       Margin="5,5,15,0" />
                            <Label Content="Ngày tạo" />
                            <TextBlock Text="{Binding NgayTao, StringFormat={}{0:yyyy-MM-dd}}"
                                       VerticalAlignment="Center"
                                       Margin="5,5,0,0" />
                        </StackPanel>

                        <Label Content="Mã học viên *" />
                        <TextBox Text="{Binding MaHocVien, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Content="Họ tên *" />
                        <TextBox Text="{Binding HoTen, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Content="Năm sinh" />
                        <TextBox Text="{Binding NamSinh, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Nhập năm, ví dụ: 2003" />

                        <Label Content="Email *" />
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Content="Điện thoại" />
                        <TextBox Text="{Binding DienThoai, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Content="Địa chỉ" />
                        <TextBox Text="{Binding DiaChi, UpdateSourceTrigger=PropertyChanged}"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto" />

                        <!-- Nút thao tác -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0">
                            <Button Content="➕ Thêm"
                                    Command="{Binding AddCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderBrush="#4CAF50" />
                            <Button Content="✏️ Sửa"
                                    Command="{Binding UpdateCommand}"
                                    Background="#FF9800"
                                    Foreground="White"
                                    BorderBrush="#FF9800" />
                            <Button Content="🗑️ Xóa"
                                    Command="{Binding DeleteCommand}"
                                    Background="#F44336"
                                    Foreground="White"
                                    BorderBrush="#F44336" />
                            <Button Content="🆕 Clear"
                                    Command="{Binding ClearCommand}"
                                    Background="#607D8B"
                                    Foreground="White"
                                    BorderBrush="#607D8B" />
                        </StackPanel>

                        <TextBlock Text="* Trường bắt buộc"
                                   FontStyle="Italic"
                                   Foreground="Red"
                                   Margin="5,10,5,0"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <!-- ===== DataGrid ===== -->
            <DataGrid Grid.Column="1"
                      ItemsSource="{Binding FilteredHocVienList}"
                      SelectedItem="{Binding SelectedHocVien, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeaderWidth="0"
                      HeadersVisibility="Column"
                      ColumnWidth="Auto"
                      CanUserResizeColumns="True"
                      BorderBrush="#90CAF9"
                      BorderThickness="1"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#E0E0E0"
                      VerticalGridLinesBrush="#E0E0E0"
                      AlternationCount="2"
                      RowBackground="White"
                      AlternatingRowBackground="#FAFAFA"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      VirtualizingPanel.ScrollUnit="Pixel"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True">

                <!-- Header cột: căn giữa + màu nền -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Center" />
                        <Setter Property="Background"
                                Value="#E3F2FD" />
                        <Setter Property="Foreground"
                                Value="#0D47A1" />
                        <Setter Property="FontWeight"
                                Value="SemiBold" />
                        <Setter Property="BorderBrush"
                                Value="#90CAF9" />
                        <Setter Property="BorderThickness"
                                Value="0,0,1,1" />
                        <Setter Property="Padding"
                                Value="6,4" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Cell & Row style -->
                <DataGrid.Resources>
                    <!-- cell text mặc định -->
                    <Style x:Key="CellText"
                           TargetType="TextBlock">
                        <Setter Property="Padding"
                                Value="6,0" />
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                        <Setter Property="TextTrimming"
                                Value="CharacterEllipsis" />
                    </Style>
                    <!-- cell căn giữa -->
                    <Style x:Key="CenterCell"
                           TargetType="TextBlock"
                           BasedOn="{StaticResource CellText}">
                        <Setter Property="TextAlignment"
                                Value="Center" />
                    </Style>
                    <!-- gạch chân mỗi row + màu chọn -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderBrush"
                                Value="#E0E0E0" />
                        <Setter Property="BorderThickness"
                                Value="0,0,0,1" />
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding Id}"
                                        MinWidth="30">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource CenterCell}" />
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Mã HV"
                                        Binding="{Binding MaHocVien}"
                                        MinWidth="50"
                                        ElementStyle="{StaticResource CellText}" />

                    <DataGridTextColumn Header="Họ tên"
                                        Binding="{Binding HoTen}"
                                        MinWidth="150"
                                        Width="*"
                                        ElementStyle="{StaticResource CellText}" />

                    <DataGridTextColumn Header="Năm sinh"
                                        Binding="{Binding NamSinh}"
                                        MinWidth="50">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource CenterCell}" />
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Email"
                                        Binding="{Binding Email}"
                                        MinWidth="220"
                                        Width="2*"
                                        ElementStyle="{StaticResource CellText}" />

                    <DataGridTextColumn Header="Điện thoại"
                                        Binding="{Binding DienThoai}"
                                        MinWidth="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource CenterCell}" />
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Địa chỉ"
                                        Binding="{Binding DiaChi}"
                                        MinWidth="100"
                                        ElementStyle="{StaticResource CellText}" />

                    <DataGridTextColumn Header="Ngày tạo"
                                        Binding="{Binding NgayTao, StringFormat={}{0:yyyy-MM-dd}}"
                                        MinWidth="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource CenterCell}" />
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Grid>
</UserControl>