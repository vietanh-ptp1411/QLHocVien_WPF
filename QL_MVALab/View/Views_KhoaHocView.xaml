<UserControl x:Class="QL_MVALab.View.Views_KhoaHocView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200">

    <!-- ========== Styles đơn giản ========== -->
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Padding"
                    Value="10,5" />
            <Setter Property="MinWidth"
                    Value="80" />
            <Setter Property="Height"
                    Value="30" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Padding"
                    Value="5" />
            <Setter Property="Height"
                    Value="25" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Height"
                    Value="25" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin"
                    Value="5,5,5,0" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Search -->
            <RowDefinition Height="*" />
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ========== Header ========== -->
        <Border Grid.Row="0"
                Background="#2196F3"
                Padding="10">
            <DockPanel LastChildFill="False">
                <TextBlock Text="QUẢN LÝ KHÓA HỌC"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center" />
                <Button Content="🔄 Refresh"
                        DockPanel.Dock="Right"
                        Command="{Binding RefreshCommand}"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="White"
                        Margin="20,0,0,0" />
            </DockPanel>
        </Border>

        <!-- ========== Search bar ========== -->
        <Border Grid.Row="1"
                Background="#f5f5f5"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="🔍 Tìm kiếm:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           FontWeight="SemiBold" />
                <TextBox Grid.Column="1"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Grid.Column="2"
                           Text="{Binding FilteredLopHocList.Count, StringFormat='Tìm thấy: {0} lớp học'}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontStyle="Italic" />
            </Grid>
        </Border>

        <!-- ========== Main Content ========== -->
        <Grid Grid.Row="2"
              Margin="10"
              Background="AliceBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <!-- Form -->
                <ColumnDefinition Width="*" />
                <!-- Grid -->
            </Grid.ColumnDefinitions>

            <!-- ===== Form nhập ===== -->
            <GroupBox Grid.Column="0"
                      Header="Thông tin khóa học"
                      Margin="0,0,5,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- Chỉ đọc: Id -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,10,0,8">
                            <Label Content="ID" />
                            <TextBlock Text="{Binding Id}"
                                       VerticalAlignment="Center"
                                       Margin="5,5,15,0" />
                        </StackPanel>

                        <Label Content="Tên khóa học *" />
                        <TextBox Text="{Binding TenKhoa, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Content="Mô tả" />
                        <TextBox Text="{Binding MoTa, UpdateSourceTrigger=PropertyChanged}"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto" />
                        
                        <Label Content="Đơn giá /10 buổi *" />
                        <TextBox Text="{Binding DonGia10Buoi, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Content="Tổng số buổi *" />
                        <TextBox Text="{Binding TongSoBuoi, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Content="Trạng thái" />
                        <CheckBox IsChecked="{Binding TrangThai, Mode=TwoWay}"
                                  Content="Hoạt động"
                                  Margin="5"
                                  Padding="5"
                                  Height="25"
                                  VerticalContentAlignment="Center" />

                        <!-- Nút thao tác -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0">
                            <Button Content="➕ Thêm"
                                    Command="{Binding AddCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderBrush="#4CAF50" />
                            <Button Content="✏️ Sửa"
                                    Command="{Binding UpdateCommand}"
                                    Background="#FF9800"
                                    Foreground="White"
                                    BorderBrush="#FF9800" />
                            <Button Content="🗑️ Xóa"
                                    Command="{Binding DeleteCommand}"
                                    Background="#F44336"
                                    Foreground="White"
                                    BorderBrush="#F44336" />
                            <Button Content="🆕 Clear"
                                    Command="{Binding ClearCommand}"
                                    Background="#607D8B"
                                    Foreground="White"
                                    BorderBrush="#607D8B" />
                        </StackPanel>

                        <TextBlock Text="* Trường bắt buộc"
                                   FontStyle="Italic"
                                   Foreground="Red"
                                   Margin="5,10,5,0"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <!-- ===== DataGrid ===== -->
            <DataGrid Grid.Column="1"
                      ItemsSource="{Binding FilteredKhoaHocList}"
                      SelectedItem="{Binding SelectedKhoaHoc, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeaderWidth="0"
                      HeadersVisibility="Column"
                      ColumnWidth="Auto"
                      CanUserResizeColumns="True"
                      BorderBrush="#90CAF9"
                      BorderThickness="1"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#E0E0E0"
                      VerticalGridLinesBrush="#E0E0E0"
                      AlternationCount="2"
                      RowBackground="White"
                      AlternatingRowBackground="#FAFAFA"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      VirtualizingPanel.ScrollUnit="Pixel"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      ScrollViewer.CanContentScroll="False">

                <!-- Header cột: căn giữa + màu nền -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Center" />
                        <Setter Property="Background"
                                Value="#E3F2FD" />
                        <Setter Property="Foreground"
                                Value="#0D47A1" />
                        <Setter Property="FontWeight"
                                Value="SemiBold" />
                        <Setter Property="BorderBrush"
                                Value="#90CAF9" />
                        <Setter Property="BorderThickness"
                                Value="0,0,1,1" />
                        <Setter Property="Padding"
                                Value="6,4" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Cell & Row style -->
                <DataGrid.Resources>
                    <!-- cell text mặc định -->
                    <Style x:Key="CellText"
                           TargetType="TextBlock">
                        <Setter Property="Padding"
                                Value="6,0" />
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                        <Setter Property="TextTrimming"
                                Value="CharacterEllipsis" />
                    </Style>
                    <!-- cell căn giữa -->
                    <Style x:Key="CenterCell"
                           TargetType="TextBlock"
                           BasedOn="{StaticResource CellText}">
                        <Setter Property="TextAlignment"
                                Value="Center" />
                    </Style>
                    <!-- gạch chân mỗi row + màu chọn -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderBrush"
                                Value="#E0E0E0" />
                        <Setter Property="BorderThickness"
                                Value="0,0,0,1" />
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding Id}"
                                        MinWidth="50">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource CenterCell}" />
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Tên khóa học"
                                        Binding="{Binding TenKhoa}"
                                        MinWidth="100"
                                        ElementStyle="{StaticResource CellText}" />

                    
                    <DataGridTemplateColumn Header="Mô tả"
                                            MinWidth="150"
                                            Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              Height="50">
                                    <TextBlock Text="{Binding MoTa}"
                                               TextWrapping="Wrap"
                                               Padding="6,2" />
                                </ScrollViewer>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>



                    <DataGridTextColumn Header="Đơn giá/10 buổi"
                                        Binding="{Binding DonGia10Buoi}"
                                        MinWidth="120"
                                        ElementStyle="{StaticResource CellText}" />

                    <DataGridTextColumn Header="Tổng số buổi"
                                        Binding="{Binding TongSoBuoi}"
                                        MinWidth="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock"
                                   BasedOn="{StaticResource CenterCell}" />
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Trạng thái"
                                            MinWidth="120"
                                            SortMemberPath="TrangThai">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border x:Name="pill"
                                        Padding="8,2"
                                        CornerRadius="5"
                                        HorizontalAlignment="Center"
                                        Background="#E8F5E9"
                                        BorderThickness="1"
                                        BorderBrush="#C8E6C9"
                                        Height="25"
                                        Width="Auto">
                                    <TextBlock x:Name="txt"
                                               FontWeight="SemiBold"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Height="20"/>
                                </Border>

                                <DataTemplate.Triggers>
                                    <!-- True -->
                                    <DataTrigger Binding="{Binding TrangThai}"
                                                 Value="True">
                                        <Setter TargetName="txt"
                                                Property="Text"
                                                Value="Hoạt động" />
                                        <Setter TargetName="txt"
                                                Property="Foreground"
                                                Value="#1B5E20" />
                                        <Setter TargetName="pill"
                                                Property="Background"
                                                Value="#E8F5E9" />
                                        <Setter TargetName="pill"
                                                Property="BorderBrush"
                                                Value="#C8E6C9" />
                                    </DataTrigger>

                                    <!-- False -->
                                    <DataTrigger Binding="{Binding TrangThai}"
                                                 Value="False">
                                        <Setter TargetName="txt"
                                                Property="Text"
                                                Value="Đã nghỉ" />
                                        <Setter TargetName="txt"
                                                Property="Foreground"
                                                Value="#B71C1C" />
                                        <Setter TargetName="pill"
                                                Property="Background"
                                                Value="#FFEBEE" />
                                        <Setter TargetName="pill"
                                                Property="BorderBrush"
                                                Value="#FFCDD2" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Grid>
</UserControl>